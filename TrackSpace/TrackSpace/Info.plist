<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Camera permission -->
    <key>NSCameraUsageDescription</key>
    <string>Camera is used to scan assets.</string>

    <!-- Photo library read permission -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Photos are used to import images for detection.</string>

    <!-- Photo library add/write permission (only needed if saving to Photos) -->
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Saves edited images and references if needed.</string>
</dict>
</plist>
